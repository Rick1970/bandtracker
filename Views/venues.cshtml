<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Venues</title>
</head>
<body>
  <h1>All Venues</h1>
  @if (@Model.Count == 0)
  {
    <p>There are no Venues yet.</p>
  }
  <ul>
    @if (Model.Count != 0)
    {
      @foreach (var venue in Model)
      {
        <li><a href="/venue/@venue.GetId()">@venue.GetName()</a> | <a href="/venue/edit/@venue.GetId()">Edit</a>| <a href="/venue/delete/@venue.GetId()">Delete</a></li>
      }
    }
  </ul>


  <a href="/venues/new">Add A New Venue</a>
  <a href="/">Return Home</a>


</body>
</html>
