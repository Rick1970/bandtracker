<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Band</title>
  </head>
  <body>
    <h1>Add a Band</h1>
    <form action="/bands/new" method="post">
      <label for="band-name">Band Name:</label>
      <input type="text" name="Band-name" id="band-name" placeholder=" Band Name">

      <select name="venue-id">
        @foreach (var band in Model)
        {
          <option value="@band.GetId()">@band.GetName()</option>
        }
      </select>
      <button type="submit">Add the Band.</button>
    </form>
    <p><a href="/">Return Home</a></p>
    <p><a href="/bands">View All Bands</a></p>
  </body>
</html>
