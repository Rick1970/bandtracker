<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Bands</title>
</head>
<body>
  <h1>The Bands</h1>
  <hr />
  <h2>Bands:</h2>
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var band in Model)
      {
        <li><a href='/bands/@band.GetId()'>@band.GetName()</a></li>
      }
    </ul>
  }
  <h4><a href="/bands/new">Add new band</a></h4>
  <h4><a href="/">Return home</a></h4>

</body>
</html>
