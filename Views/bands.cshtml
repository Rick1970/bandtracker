<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Bands</title>
</head>
<body>
  <h1>All Bands</h1>
  @if (@Model.Count == 0)
  {
    <p>There are no Bands yet.</p>
  }
  <ul>
    @if (Model.Count != 0)
    {
      @foreach (var band in Model)
      {
        <li><a href="/band/@band.GetId()">@band.GetName()</a> | <a href="/band/edit/@band.GetId()">Edit</a>| <a href="/venue/delete/@band.GetId()">Delete</a></li>
      }
    }
  </ul>


  <a href="/band/new">Add A New Band</a>
  <a href="/">Return Home</a>


</body>
</html>
